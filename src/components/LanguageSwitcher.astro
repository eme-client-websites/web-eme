---
import { languages, getLangFromUrl } from '../i18n/utils';

const currentLang = getLangFromUrl(Astro.url);
const otherLang = currentLang === 'es' ? 'en' : 'es';

// Construir la URL para el otro idioma
function getOtherLangUrl() {
  const pathname = Astro.url.pathname;
  
  if (currentLang === 'es') {
    // Si estamos en español, agregar /en al inicio
    return '/en' + pathname;
  } else {
    // Si estamos en inglés, quitar /en del inicio
    return pathname.replace('/en', '') || '/';
  }
}

const otherLangUrl = getOtherLangUrl();
---

<!-- Switch para desktop - solo visible en pantallas grandes -->
<div class="hidden lg:block fixed bottom-6 left-1/2 transform -translate-x-1/2 z-50">
  <div class="flex items-center bg-black/20 backdrop-blur-md border border-white/10 rounded-full px-4 py-2 shadow-lg">
    <!-- Idioma actual -->
    <div class="flex items-center">
      <span class="text-white font-medium text-sm">
        {currentLang === 'es' ? 'ESP' : 'ENG'}
      </span>
    </div>
    
    <span class="text-white/30 mx-3">|</span>
    
    <!-- Idioma alternativo -->
    <a 
      href={otherLangUrl}
      class="hover:scale-110 transition-all duration-300 opacity-60 hover:opacity-100"
    >
      <span class="text-white font-medium text-sm">
        {otherLang === 'es' ? 'ESP' : 'ENG'}
      </span>
    </a>
  </div>
</div>

