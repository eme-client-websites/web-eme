---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<!-- Sección de Contadores Animados -->
<section class="pb-[160px] xl:pb-[8.33rem] relative overflow-hidden" data-color="#FFFFFF" data-active="true">
  
  <div class="container-custom relative z-10">
    <!-- Título de la sección -->
    <div class="pt-20 xl:pt-[8rem]">
      <div class="flex flex-wrap justify-between xl:flex-nowrap xl:gap-x-[5rem]">
        <div class="w-full xl:w-auto">
          <h2 class="text-5xl md:text-6xl lg:text-7xl xl:text-8xl font-bold flex flex-wrap items-start gap-x-3 xl:gap-x-[2.6rem] dynamic-text leading-tight transition-colors duration-300">
            {lang === 'en' ? (
              <>
                <span>Numbers</span>
                <span>that don't</span>
                <span>just measure—</span>
                <span>they also</span>
                <span>inspire</span>
              </>
            ) : (
              <>
                <span>Números</span>
                <span>que no</span>
                <span>solo miden—</span>
                <span>nos</span>
                <span>respaldan</span>
              </>
            )}
          </h2>
        </div>
        <div class="w-full pt-8 xl:w-auto xl:pt-[2.08rem]">
          <p class="text-[16px] font-normal leading-[1.45em] xl:text-[1.14rem] dynamic-text opacity-70 transition-colors duration-300">
            {t('counters.subtitle') || 'Cada número cuenta una historia de transformación, crecimiento y éxito compartido.'}
          </p>
        </div>
      </div>
    </div>
    
  </div>
</section>

