---
// Componente de estadísticas globales
---

<section class="relative py-20 md:py-32 lg:py-40 overflow-hidden" style="background: transparent;">
  <!-- Mapa del mundo como fondo -->
  <div class="absolute inset-0 flex items-center justify-center">
    <img 
      src="/mapworld.svg" 
      alt="Mapa del mundo" 
      class="w-full h-full object-contain"
    />
  </div>
  
  <!-- Efectos de fondo geométricos -->
  <div class="absolute inset-0 opacity-20">
    <div class="absolute top-1/4 left-1/4 w-32 h-32 border border-white/20 rotate-45"></div>
    <div class="absolute top-3/4 right-1/4 w-24 h-24 border border-white/20 rotate-12"></div>
    <div class="absolute bottom-1/4 left-1/3 w-16 h-16 border border-white/20 rotate-45"></div>
  </div>
  
  
  <!-- Contenido principal -->
  <div class="container-custom relative z-10 text-center">
    <div class="max-w-6xl mx-auto">
      <!-- Primera línea -->
      <h2 class="text-5xl md:text-7xl lg:text-8xl xl:text-9xl font-black dynamic-text mb-4 md:mb-8 tracking-tight leading-none transition-colors duration-300">
        1300 MINDS
      </h2>
      
      <!-- Segunda línea -->
      <h2 class="text-5xl md:text-7xl lg:text-8xl xl:text-9xl font-black dynamic-text mb-4 md:mb-8 tracking-tight leading-none transition-colors duration-300">
        30 LOCATIONS
      </h2>
      
      <!-- Tercera línea -->
      <h2 class="text-5xl md:text-7xl lg:text-8xl xl:text-9xl font-black dynamic-text tracking-tight leading-none transition-colors duration-300">
        ONE TEAM
      </h2>
    </div>
  </div>
  
  <!-- Efectos de partículas flotantes -->
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute top-1/4 left-1/4 w-2 h-2 bg-white rounded-full opacity-60 animate-ping"></div>
    <div class="absolute top-3/4 right-1/4 w-1 h-1 bg-white rounded-full opacity-40 animate-ping" style="animation-delay: 1s;"></div>
    <div class="absolute top-1/2 left-3/4 w-1.5 h-1.5 bg-white rounded-full opacity-50 animate-ping" style="animation-delay: 2s;"></div>
    <div class="absolute bottom-1/4 left-1/2 w-1 h-1 bg-white rounded-full opacity-30 animate-ping" style="animation-delay: 3s;"></div>
  </div>
</section>

<style>
  /* Efecto de brillo en el texto */
  h2 {
    text-shadow: 0 0 20px rgba(255, 255, 255, 0.3);
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    h2 {
      font-size: 3rem;
      line-height: 0.9;
    }
  }
  
  @media (max-width: 480px) {
    h2 {
      font-size: 2.5rem;
    }
  }
</style>
